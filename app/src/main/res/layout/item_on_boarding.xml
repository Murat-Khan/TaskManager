<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/on_bord_image"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="250dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/on_board_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_onboard"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/on_bord_image"
        app:layout_constraintStart_toStartOf="@id/on_bord_image"
        app:layout_constraintEnd_toEndOf="@id/on_bord_image"
        android:layout_marginTop="34dp"
        />

    <TextView
        android:id="@+id/on_board_desc"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/desc"
        android:textSize="24sp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/on_board_title"
        app:layout_constraintStart_toStartOf="@id/on_board_title"
        app:layout_constraintEnd_toEndOf="@id/on_board_title"
        />






</androidx.constraintlayout.widget.ConstraintLayout>